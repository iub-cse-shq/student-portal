<% include partials/header %>
<head>
  <title>Add a Post</title>
</head>

<body id="postBody">
  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Dashboard</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/dash">Home</a></li>
            <li class="active"><a href="/dash/posts/add">Add Post</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="/dash"><span class="glyphicon glyphicon-user"></span>  <%= user.name %> </a></li>
            <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>

    
  <div class="container" id= "formAdd">
    <h1> <%= title %> </h1>
    <hr />
    <form method="POST" action="/dash/posts/add">
      <div id="form-group">
        <label>Title:</label>
        <input class="form-control" name="title" type="text" / required>
      </div>
  
      <div id="form-group">
        <label>Author:</label>
        <input class="form-control" name="author" type="text" / required>
      </div>
  
      <div id="form-group">
        <label>Body:</label>
        <textarea class="form-control" name="body"> </textarea>
        <br />
        
        <label class="radio-inline">
          <input type="radio" name="optradio" value="0" checked />Public
        </label>
        <label class="radio-inline">
          <input type="radio" name="optradio" value="1" />Private
        </label>
        <hr />
        <input class="btn btn-default" type="submit" name="submit-btn" value="Submit">
      </div>
      
      
    </form>
  </div>
  
  <br><br><br><br><br>
  
<% include partials/footer %>
