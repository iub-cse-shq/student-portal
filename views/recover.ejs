<% include ./partials/header.ejs %>
    
    <body id="recoveryPage">
    
    <div class= "container" id="recoveryheading">
        <!--IUB Logo goes here-->
        <p class= "recoveryheader">
        <a href= "/"><img src="http://www.fhrc-bd.org/images/logo/logo_iub.png" width="100" height="100"></img></a>
            Password Recovery Page
            <span></span>
        </p>
    </div>
        
     <!--Basically one big form page-->
    <form class="container" id="recoveryform">
      <p class= "recoveryinfo"> Please fill in the following information in order to recover your account: </p>
      <div class="form-group">
        <label for="exampleInputEmail">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter email" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword" placeholder="Enter Password" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword">Re-enter Password</label>
        <input type="password" class="form-control" id="exampleInputPassword" placeholder="Enter Password" required>
      </div>
      <button type="submit" class="btn">Submit</button>
    </form>
    
